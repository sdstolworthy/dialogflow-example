{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "rootDir": ".",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
   "src/*.ts",
   "src/**/*.ts",
   "test/*.ts",
   "test/**/*.ts"
 ]
}
